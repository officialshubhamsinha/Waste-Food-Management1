<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food"
    tools:context=".Donation_Entry">

    <Button
        android:id="@+id/button3"
        android:layout_width="163dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#009688"
        android:text="Add"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName8" />

    <Button
        android:id="@+id/button4"
        android:layout_width="194dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#E91E63"
        android:text="Current Location"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="243dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:text="Donation Information:-"
        android:textColor="#1E88E5"
        android:textColorHint="#A7FFEB"
        android:textColorLink="#A7FFEB"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="377dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text="Restaurant Name And Place"
        android:textColor="#8E24AA"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="18dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="381dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Current Location"
        android:textColor="#8E24AA"
        android:textColorHint="#FF9800"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:text="Food Details"
        android:textColor="#8E24AA"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7"
        tools:layout_editor_absoluteX="19dp" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="376dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter Restaurant Name And Place"
        android:inputType="textPersonName"
        android:textColor="#191616"
        android:textColorHint="#FC716773"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:layout_editor_absoluteX="17dp" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter Current Location"
        android:inputType="textPersonName"
        android:textColor="#0A020C"
        android:textColorHint="#FC716773"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:layout_editor_absoluteX="19dp" />

    <EditText
        android:id="@+id/editTextTextPersonName8"
        android:layout_width="377dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter Food Details"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="409dp"
        android:layout_height="48dp"
        android:background="#11E81A"
        android:text="     NEW DONATION"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>